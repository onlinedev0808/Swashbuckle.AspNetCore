{
  "version": "6.0.0-*",
  "description": "Swagger UI component for Swashbuckle - a Swagger toolchain for ASP.NET Core.",

  "buildOptions": {
    "embed": [
      "bower_components/swagger-ui/**/*.*",
      "CustomAssets/index.html"
    ],
    "keyFile": "Swashbuckle.SwaggerUi.snk"
  },

  "packOptions": {
    "licenseUrl": "https://github.com/domaindrivendev/Swashbuckle/LICENSE",
    "owners": [
      "Richard Morris"
    ],
    "projectUrl": "https://github.com/domaindrivendev/Swashbuckle",
    "summary": "Provides an embedded version of the swagger-ui tool that can be served from your application.",
    "tags": [
      "swagger",
      "documentation",
      "discovery",
      "help",
      "webapi",
      "aspnet",
      "aspnetcore"
    ]
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc.Core": "1.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0",
    "Microsoft.Extensions.FileProviders.Embedded": "1.0.0"
  },

  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0"
      }
    },
    "netstandard1.6": {
      "dependencies": {
        "System.Xml.XPath": "4.0.1"
      },
      "imports": [
        "dnxcore50",
        "portable-net451+win8"
      ]
    }
  }
}